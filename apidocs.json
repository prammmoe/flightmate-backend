{
  "openapi": "3.0.0",
  "info": {
    "title": "FlightMate API",
    "description": "Daftar API FlightMate",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Flight",
      "description": "List of /flights endpoint"
    },
    {
      "name": "Booking",
      "description": "List of /bookings endpoint"
    },
    {
      "name": "Airport",
      "description": "List of /airport endpoint"
    },
    {
      "name": "Aircraft",
      "description": "List of /aircraft endpoint"
    }
  ],
  "paths": {
    "/flights": {
      "get": {
        "tags": ["Flight"],
        "summary": "Get all flights",
        "description": "Get flights data",
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": ["Flight"],
        "summary": "Create new flight data",
        "description": "Create new flights data, both single and bulk",
        "consumes": "multipart/form-data",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "flightNumber": {
                    "type": "string"
                  },
                  "flightClass": {
                    "type": "string"
                  },
                  "departureAirportId": {
                    "type": "integer"
                  },
                  "arrivalAirportId": {
                    "type": "integer"
                  },
                  "departureTime": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "arrivalTime": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "aircraftId": {
                    "type": "integer"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["SCHEDULED", "ON_TIME", "DELAYED", "CANCELLED"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/bookings": {
      "get": {
        "tags": ["Booking"],
        "summary": "Get all bookings",
        "description": "Get booking data",
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/airport": {
      "get": {
        "tags": ["Airport"],
        "summary": "Get all airport",
        "description": "Get airport data",
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/aircraft": {
      "get": {
        "tags": ["Aircraft"],
        "summary": "Get all aircrafts",
        "description": "Get aircraft data",
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
